<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pakbachelors.crona">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/main_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.IntroActivity"></activity>
        <activity android:name=".activity.TextActivity" />
        <activity android:name=".activity.ResultActivity" />
        <activity android:name=".activity.CheckerActivity" />
        <activity android:name=".activity.StatusDetailActivity" />
        <activity android:name=".activity.StatusActivity" />
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>